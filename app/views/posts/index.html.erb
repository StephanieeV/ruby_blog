<div class="container">
  <br>
  <h1 class="title">Listing Posts</h1>
  <br>
  <% @posts.each do |post| %>
    <div class="section">
      <div class="card is-horizontal columns">
        <div class="card-image column is-3">
          <figure class="image is-4by3">
            <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">            </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-4"><%= link_to post.title, post %></p>
              <p class="subtitle is-7">by <%= link_to post.user_id %></p>
              <p class="subtitle is-7"><%= post.date %></p>
            </div>
          </div>

          <div class="content">
            <%= post.introduction %>
          </div>

          <button class="button is-small is-primary is-outlined"><%= link_to 'Show', post %></button>
          <button class="button is-small is-info is-outlined"><%= link_to 'Edit', edit_post_path(post) %></button>
          <button class="button is-small is-danger is-outlined"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        </div>
      </div>
    </div>
  <% end %>
</div>